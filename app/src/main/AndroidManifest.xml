<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lukesapps.grandcross.database"
    tools:ignore="LockedOrientationActivity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".FirebaseHandler"
        android:allowBackup="true"
        android:icon="@drawable/sds_app_icon_2"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".cosmetics_menu_main"
            android:label="Cosmetics Information"
            android:parentActivityName=".cosmetics_list"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8009364805724327~1107575370" />

        <activity
            android:name=".cosmetics_list"
            android:label="Cosmetics List"
            android:parentActivityName=".a_main_screen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />

        <meta-data
            android:name="applovin.sdk.key"
            android:value="PP1GuQE3dFiCqsTc6TTTO-upxg-DTwwXrArGvZTWulPt3teAssmdDKJdonpRdTihfFBen6BsC4znDQTJxIE8vq" />

        <activity
            android:name="com.adcolony.sdk.AdColonyInterstitialActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.adcolony.sdk.AdColonyAdViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:hardwareAccelerated="true"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8009364805724327~1107575370" />

        <activity
            android:name=".otherResources"
            android:label="Other Resources"
            android:parentActivityName=".a_main_screen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".summonSimulator"
            android:label="Summon Simulator"
            android:parentActivityName=".a_main_screen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".cooking"
            android:label="Cooking"
            android:parentActivityName=".a_main_screen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".awakening"
            android:label="Awakening Costs"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".help_menu"
            android:label="Help and Info"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".character_list"
            android:label="Characters"
            android:parentActivityName=".a_main_screen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".character_page"
            android:label="Character Information"
            android:parentActivityName=".character_list"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".a_main_screen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>